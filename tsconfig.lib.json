{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "out-tsc/lib",
    "target": "es2015",
    "declaration": true,
    "declarationMap": true,
    "inlineSources": true,
    "types": [],
    "lib": [
      "dom",
      "es2018"
    ]
  },
  "angularCompilerOptions": {
    "skipTemplateCodegen": true,
    "strictMetadataEmit": true,
    "enableResourceInlining": true,
    "compilationMode": "partial"
  },
  "include": [
    "./src/"
  ],
  "exclude": [
    "src/test.ts",
    "src/public-api.ts",
    "**/*.spec.ts",
    "**/*.stories.*"
  ]
}
